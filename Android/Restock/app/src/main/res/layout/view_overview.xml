    <Button
        android:id="@+id/goto_wunderlist_button"
        android:layout_width="256sp"
        android:layout_height="42sp"
        android:background="#A0FF2222"
        android:layout_centerHorizontal="true"
        android:text="@string/goto_wunderlist"
        android:layout_marginTop="32dp"
        android:textColor="@color/overlay_text"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_below="@id/overview_recent_scans"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="256sp"
        android:layout_height="42sp"
        android:background="@color/overlay_corners"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:text="@string/logout_wunderlist"
        android:layout_marginTop="12dp"
        android:textColor="@color/overlay_text"
        android:layout_below="@id/goto_wunderlist_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about"
            android:textAllCaps="false"
            android:textColor="@color/overlay_text"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about2"
            android:textAllCaps="false"
            android:textColor="@color/overlay_text"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about3"
            android:textAllCaps="false"
            android:textColor="@color/overlay_text"
            android:textSize="18sp"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>
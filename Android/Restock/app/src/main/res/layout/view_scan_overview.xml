<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36sp"
    android:paddingBottom="0dp"
    android:weightSum="15"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/scan_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_weight="14"
        android:ellipsize="start"
        android:textColor="@color/overlay_text_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/scan_action"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/scan_description"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:text="@string/add_again"
        android:textAllCaps="false"
        android:textColor="@color/overlay_text"
        android:textSize="16sp" />

</LinearLayout>